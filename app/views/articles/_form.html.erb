<div class="center flex-col p-4 h-72">
  <%= form_with model: article, class:'gap-2 flex flex-col w-80 text-center' do |f| %>
      <div class="flex flex-col">
        <%= f.label :title %>
        <%= f.text_field :title, class: f.object.errors[:title].empty? ? 'normal-border' : 'error-border' %>
      </div>
      <div class="flex flex-col h-max">
        <%= f.label :content %>
        <%= f.text_area :content, class: f.object.errors[:content].empty? ? 'normal-border' : 'error-border' %>
      </div>
      <%= f.submit class:'normal-border'  %>
      <%= link_to 'Back', root_path(id: article.id), class:'normal-border' %>
  <% end %>
</div>
